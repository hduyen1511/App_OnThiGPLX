<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimarys"
        app:theme="@style/ToolbarColoredBackArrow"
        android:popupTheme="@style/AppTheme"
        >
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SƠ ĐỒ THI SÁT HẠCH LÁI XE A1, A2"
                    android:textSize="22.1sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="16.9dp"
                    />
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="345.8dp"
                    android:layout_height="215.8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32.5dp"
                    app:srcCompat="@drawable/sodothisathach"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NỘI DUNG 4 BÀI SA HÌNH SÁT HẠCH LÁI XE A1, A2"
                    android:textSize="22.1sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="32.5dp"
                    android:layout_margin="22.1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bài số 1: Lái xe theo vòng số 8\n\nBài số 2: Lái xe trên đường thẳng\n\nBài số 3: Lái xe trên đường ngoằn ngoèo\n\nBài số 4: Lái xe trên đường gồ ghề"
                    android:paddingLeft="22.1dp"
                    android:textColor="#000"
                    android:layout_marginTop="22.1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Các lỗi bị trừ điểm:"
                    android:paddingLeft="22.1dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="22.1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điểm tối thiểu để đạt là 80/100."
                    android:paddingLeft="22.1dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="22.1dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- Trừ 5 điểm: cán vạch, chết máy, chân chạm đất\n\n- Trừ 25 điểm - loại trực tiếp: học viên để té xe hoặc đi sai hình (đi ngược vòng) hoặc sẽ bị lọa trực tiếp"
                    android:paddingLeft="22.1dp"
                    android:textColor="#000"
                    android:layout_marginTop="22.1dp"
                    />
                <TextView
                    android:id="@+id/tv_kinhNghiemThiA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kinh nghiệm thi >>"
                    android:textColor="#36b1ea"
                    android:paddingLeft="22.1dp"
                    android:clickable="true"
                    android:layout_marginTop="32.5dp"
                    android:layout_marginBottom="75.4dp"
                    android:textSize="18.2sp"
                    />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>