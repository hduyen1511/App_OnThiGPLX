<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5.2dp"
    android:layout_marginLeft="16.9dp"
    android:layout_marginRight="16.9dp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="5.2dp"
            android:background="@color/colorPrimarys"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#eae7e7"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.7dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Câu: "
                        android:textColor="#000"
                        android:textSize="18.2sp"
                        android:layout_marginLeft="5.2dp"
                        />
                    <TextView
                        android:id="@+id/tv_stt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#ea3443"
                        android:textSize="18.2sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cauHoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc xyz"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="11.7dp"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/anhCauHoi"
                    android:layout_width="325dp"
                    android:layout_height="162.5dp"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="16.9dp"
                    android:layout_marginRight="16.9dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16.9dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                />
            <TextView
                android:id="@+id/A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A. 1"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="5.2dp"
                android:layout_marginBottom="5.2dp"
                android:textSize="16.9sp"
                android:textColor="#000"
                />
            <View
                android:id="@+id/view_A"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                />
            <TextView
                android:id="@+id/B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. 2"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="5.2dp"
                android:layout_marginBottom="5.2dp"
                android:textSize="16.9sp"
                android:textColor="#000"
                />
            <View
                android:id="@+id/view_B"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                />
            <View
                android:id="@+id/view_B_"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C. 3"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="5.2dp"
                android:layout_marginBottom="5.2dp"
                android:textSize="16.9sp"
                android:textColor="#000"
                />
            <View
                android:id="@+id/view_C"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                />
            <View
                android:id="@+id/view_C_"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D. 4"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="5.2dp"
                android:layout_marginBottom="5.2dp"
                android:textSize="16.9sp"
                android:textColor="#000"
                />
            <View
                android:id="@+id/view_D"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53.3dp"
                android:background="#fcfcec"
                >
                <TextView
                    android:id="@+id/tv_dapAn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đáp án: 1-2"
                    android:gravity="right"
                    android:layout_marginLeft="200dp"
                    android:textSize="18.2sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:background="#FFFF00"
                    android:paddingLeft="7.8dp"
                    android:paddingRight="7.8dp"
                    android:paddingBottom="3.9dp"
                    android:layout_marginTop="11.7dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>