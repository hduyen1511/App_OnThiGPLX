                    android:id="@+id/tv_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#000"
                    android:textSize="18.2sp"
                    />
                <ImageView
                    android:id="@+id/img_dungSai"
                    android:layout_width="32.5dp"
                    android:layout_height="32.5dp"
                    android:layout_marginLeft="32.50dp"
                    android:src="@drawable/ic_true"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_cauHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc xyz"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="11.7dp"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginBottom="11.7dp"
                android:textSize="16.9sp"
                />

            <ImageView
                android:id="@+id/anhCauHoi"
                android:layout_width="325dp"
                android:layout_height="162.5dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16.9dp"
                android:layout_marginRight="16.9dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="16.9dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
