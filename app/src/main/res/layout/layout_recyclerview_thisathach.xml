<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16.9dp"
            android:layout_marginRight="16.9dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.2dp"
                    android:text="CÃ¢u: "
                    android:textColor="#000"
                    android:textSize="18.2sp" />

                <TextView
                    android:id="@+id/tv_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="18.2sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cauHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.9dp"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="11.7dp"
                android:text="abc xyz"
                android:textColor="#000"
                android:textSize="16.9sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/anhCauHoi"
                android:layout_width="325dp"
                android:layout_height="162.5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16.9dp"
                android:layout_marginLeft="16.9dp"
                android:layout_marginRight="16.9dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:background="#000"
            />

        <CheckBox
            android:id="@+id/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            android:layout_marginTop="5.2dp"
            android:layout_marginBottom="5.2dp"
            android:textSize="16.9sp"
            android:textColor="#000"
            android:text="A. 1"
            android:buttonTint="@color/colorPrimary"
            />
        <View
            android:id="@+id/view_A"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            />
        <CheckBox
            android:id="@+id/B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            android:layout_marginTop="5.2dp"
            android:layout_marginBottom="5.2dp"
            android:textSize="16.9sp"
            android:textColor="#000"
            android:buttonTint="@color/colorPrimary"
            android:text="B. 2" />
        <View
            android:id="@+id/view_B"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            />
        <View
            android:id="@+id/view_B_"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:visibility="gone"
            android:layout_marginBottom="13dp"
            />

        <CheckBox
            android:id="@+id/C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            android:layout_marginTop="5.2dp"
            android:layout_marginBottom="5.2dp"
            android:textSize="16.9sp"
            android:textColor="#000"
            android:text="C. 3"
            android:buttonTint="@color/colorPrimary"
            />
        <View
            android:id="@+id/view_C"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            />
        <View
            android:id="@+id/view_C_"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:visibility="gone"
            android:layout_marginBottom="13dp"
            />

        <CheckBox
            android:id="@+id/D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="22.1dp"
            android:layout_marginTop="5.2dp"
            android:layout_marginBottom="5.2dp"
            android:textSize="16.9sp"
            android:textColor="#000"
            android:text="D. 4"
            android:buttonTint="@color/colorPrimary"
            />
        <View
            android:id="@+id/view_D"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:layout_marginBottom="13dp"
            />
    </LinearLayout>

</ScrollView>
